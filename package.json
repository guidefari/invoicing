{
  "name": "invoicing",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": ["core", "web", "tui"],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@invoicing/web",
    "dev:tui": "turbo run dev --filter=@invoicing/tui",
    "build": "turbo run build",
    "compile:tui": "cd tui && bun build --compile src/index.tsx --outfile invoicing-cli",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "effect-language-service patch",
    "db:push": "cd core && bun run db:push",
    "db:gen": "cd core && bun run db:gen",
    "db:migrate": "cd core && bun run db:migrate",
    "db:studio": "cd core && bun run db:studio"
  },
  "devDependencies": {
    "@effect/language-service": "^0.57.0",
    "@types/bun": "latest",
    "effect-solutions": "^0.4.13",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "better-sqlite3",
    "esbuild",
    "msgpackr-extract",
    "puppeteer"
  ]
}
